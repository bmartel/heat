{
  "name": "@martel/heat-template",
  "version": "0.1.17",
  "license": "MIT",
  "description": "A project template for creating new heat stack applications",
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "heat",
    "typescript",
    "hyperapp",
    "express",
    "apollo",
    "graphql",
    "mongodb",
    "lerna",
    "yarn",
    "monorepo",
    "csa-template",
    "template"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "start": "lerna run --parallel start",
    "build": "echo \"Nothing to build\" && exit 0",
    "test": "lerna run test",
    "format": "prettier --write \"packages/**/*.{ts,js,jsx,tsx}\"",
    "lint": "prettier --check \"packages/**/*.{ts,js,jsx,tsx}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.12.1",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@babel/runtime-corejs3": "^7.12.1",
    "@martel/hyperapp-scripts-snowpack": "^0.1.2",
    "@snowpack/plugin-build-script": "^2.0.8",
    "@snowpack/plugin-optimize": "^0.2.3",
    "autoprefixer": "^10.0.1",
    "core-js": "^3.6.5",
    "cssnano": "^4.1.10",
    "dotenv": "^8.2.0",
    "husky": "4.3.0",
    "jest": "^26.5.2",
    "lerna": "3.22.1",
    "lint-staged": "10.4.0",
    "nodemon": "^2.0.6",
    "postcss": "^8.1.1",
    "postcss-cli": "^8.1.0",
    "prettier": "^2.1.2",
    "snowpack": "^2.13.3",
    "tailwindcss": "^1.8.12"
  }
}
