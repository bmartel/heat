{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "strict": true,
    "declaration": true,
    "lib": ["es5", "es6", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist", "build", "lib"]
}
